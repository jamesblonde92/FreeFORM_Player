<android.support.v4.widget.DrawerLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/drawer_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <!-- The main content view -->

<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <ListView

        android:layout_height="0dp"
        android:id="@+id/listView_songs"
        android:choiceMode="multipleChoiceModal"
        android:layout_weight="4"
        android:textSize="20sp"
        android:layout_width="fill_parent"
        android:background="#FFF3E0"
        android:smoothScrollbar="true"
        android:textAlignment="center"
        />

    <RelativeLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_gravity="center_horizontal"
        android:layout_weight="1.08"
        android:id="@+id/playControlsBox"
        android:background="#607D8B"
        android:padding="10dp"
        android:gravity="clip_horizontal|end">

        <ImageButton
            android:layout_width="56dp"
            android:layout_height="56dp"
            android:id="@+id/button_prev"
            android:layout_alignTop="@+id/button_play"
            android:src="@drawable/ic_skip_previous_white_48dp"
            android:layout_alignLeft="@+id/playingSongText"
            android:layout_alignStart="@+id/playingSongText"
            android:layout_alignParentEnd="false"
            android:background="@drawable/roundedbutton"/>

        <ImageButton
            android:layout_width="56dp"
            android:layout_height="56dp"
            android:id="@+id/button_pause"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:gravity="center"
            android:textAlignment="center"
            android:background="@drawable/roundedbutton"
            android:src="@drawable/ic_pause_white_48dp"/>

        <ImageButton
            android:layout_width="56dp"
            android:layout_height="56dp"
            android:id="@+id/button_play"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:gravity="center"
            android:textAlignment="center"
            android:background="@drawable/roundedbutton"
            android:src="@drawable/ic_play_arrow_white_48dp"/>

        <ImageButton
            android:layout_width="56dp"
            android:layout_height="56dp"
            android:id="@+id/button_next"
            android:background="@drawable/roundedbutton"
            android:src="@drawable/ic_skip_next_white_48dp"
            android:layout_alignTop="@+id/button_play"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:adjustViewBounds="false"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:id="@+id/playingSongText"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_alignParentBottom="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:gravity="center"
            android:textColor="#ffffff"
            android:layout_below="@+id/button_prev"/>

    </RelativeLayout>

</LinearLayout>



    <!-- The navigation drawer -->
    <ListView android:id="@+id/left_drawer"
        android:layout_width="240dp"
        android:layout_height="match_parent"
        android:layout_gravity="start"
        android:choiceMode="singleChoice"
        android:divider="@android:color/transparent"
        android:dividerHeight="0dp"
        android:background="#111"/>
</android.support.v4.widget.DrawerLayout>
